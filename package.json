{
  "name": "@hb-design/ui",
  "version": "0.1.0",
  "description": "A modern design system built with Tailwind CSS and Vite",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ui/input/*": {
      "import": "./dist/ui/input/*.mjs",
      "require": "./dist/ui/input/*.js",
      "types": "./dist/ui/input/*.d.ts"
    },
    "./ui/feedback/*": {
      "import": "./dist/ui/feedback/*.mjs",
      "require": "./dist/ui/feedback/*.js",
      "types": "./dist/ui/feedback/*.d.ts"
    },
    "./ui/display/*": {
      "import": "./dist/ui/display/*.mjs",
      "require": "./dist/ui/display/*.js",
      "types": "./dist/ui/display/*.d.ts"
    },
    "./ui/navigation/*": {
      "import": "./dist/ui/navigation/*.mjs",
      "require": "./dist/ui/navigation/*.js",
      "types": "./dist/ui/navigation/*.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "design-system",
    "ui",
    "components",
    "tailwindcss",
    "react",
    "typescript"
  ],
  "author": "HB Design Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  }
}
